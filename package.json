{
  "name": "calculator-app-pro",
  "version": "1.0.0",
  "description": "Electron calculator app (organized professional structure)",
  "author": "Thai Phan Thanh Sang",
  "main": "src/main/main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "test": "jest",
    "lint": "eslint src --ext .js",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "jest": "^29.7.0"
  },
  "build": {
    "publish": null,
    "appId": "com.example.calculator",
    "productName": "CalculatorApp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "mac": {
      "target": "zip",
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}